{
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "moduleResolution": "node",
    "module": "ESNext",
    "strict": true,
    "paths": {
      "@/core": ["../core"],
      "@/core/*": ["../core/*"]
    }
  }
}
